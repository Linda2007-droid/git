 //part 1

 /**
 * Kelas Mahasiswa untuk menyimpan data NIM dan Nama.
 */
public class Mahasiswa {
    private String nim;
    private String nama;

    // Constructor Default
    public Mahasiswa() {
        this.nim = "N/A";
        this.nama = "Nama Belum Diisi";
    }

    // Constructor Berparameter
    public Mahasiswa(String nim, String nama) {
        this.nim = nim;
        this.nama = nama;
    }

    // Getter untuk Nama
    public String getNama() {
        return nama;
    }

    // Setter untuk Nama
    public void setNama(String nama) {
        this.nama = nama;
    }

    // Getter untuk NIM
    public String getNim() {
        return nim;
    }

    // Setter untuk NIM
    public void setNim(String nim) {
        this.nim = nim;
    }

    // Method tambahan untuk menampilkan semua informasi
    public void tampilkanData() {
        System.out.println("--- Detail Mahasiswa ---");
        System.out.println("NIM : " + this.nim);
        System.out.println("Nama: " + this.nama);
    }
}

// PART 2
/**
 * Kelas Tester untuk menguji fungsionalitas kelas Mahasiswa.
 */
public class MahasiswaTester {
    public static void main(String[] args) {
        System.out.println("===== PENGUJIAN KELAS MAHASISWA =====");
        
        // 1. Menguji Constructor Berparameter
        Mahasiswa mhsA = new Mahasiswa("2023001", "Ani Yuliana");
        System.out.println("\n[Objek mhsA - Dibuat dengan Constructor Berparameter]");
        mhsA.tampilkanData();

        // 2. Menguji Constructor Default dan Setter
        Mahasiswa mhsB = new Mahasiswa();
        System.out.println("\n[Objek mhsB - Dibuat dengan Constructor Default]");
        mhsB.tampilkanData(); // Menampilkan data default
        
        // Menggunakan Setter untuk mengisi data
        mhsB.setNim("2023002");
        mhsB.setNama("Bambang Kurniawan");
        
        System.out.println("\n[Data mhsB setelah diubah dengan Setter]");
        mhsB.tampilkanData();

        // 3. Menguji Getter
        System.out.println("\n--- Pengujian Getter ---");
        System.out.println("Nama mhsA (Getter): " + mhsA.getNama());
        System.out.println("NIM mhsB (Getter): " + mhsB.getNim());
    }
}
//PART 3 JAWABAN NO 2 SESUAI MODUL
/**
 * ðŸ’³ Program Utama Demonstrasi Polymorphism Pembayaran
 * - Superclass: Pembayaran (abstract)
 * - Subclass: Tunai, Kartu, DompetDigital (override proses())
 * - Main method: Membuat array Pembayaran[] dan iterasi.
 */
public class PembayaranPolymorphism {

    // --- SUPERCLASS ---
    public static abstract class Pembayaran {
        // Method abstrak yang harus diimplementasikan oleh subclass
        public abstract void proses(double total);
    }

    // --- SUBCLASS 1: Tunai ---
    public static class Tunai extends Pembayaran {
        private double uangDiterima;

        public Tunai(double uangDiterima) {
            this.uangDiterima = uangDiterima;
        }

        @Override
        public void proses(double total) {
            System.out.println("\n--- [Metode: Pembayaran Tunai] ---");
            System.out.printf("Total Pembelian: Rp %.2f\n", total);
            System.out.printf("Uang Dibayarkan: Rp %.2f\n", this.uangDiterima);
            
            double kembalian = this.uangDiterima - total;
            
            if (kembalian >= 0) {
                // Menampilkan kembalian
                System.out.printf("**Kembalian:** Rp **%.2f**\n", kembalian);
            } else {
                System.out.printf("Pembayaran kurang! Kekurangan: Rp %.2f\n", (-kembalian));
            }
        }
    }

    // --- SUBCLASS 2: Kartu ---
    public static class Kartu extends Pembayaran {
        private static final double BIAYA_ADMIN = 3500.00; // Biaya administrasi

        @Override
        public void proses(double total) {
            System.out.println("\n--- [Metode: Pembayaran Kartu Debit/Kredit] ---");
            System.out.printf("Total Pembelian: Rp %.2f\n", total);
            
            double totalDenganBiaya = total + BIAYA_ADMIN;
            
            // Mencetak biaya administrasi
            System.out.printf("Biaya Administrasi: Rp **%.2f**\n", BIAYA_ADMIN);
            System.out.printf("Total Akhir Dipotong dari Kartu: Rp %.2f\n", totalDenganBiaya);
        }
    }

    // --- SUBCLASS 3: DompetDigital ---
    public static class DompetDigital extends Pembayaran {
        private static final double POTONGAN_LAYANAN_PERCENT = 0.02; // 2%

        @Override
        public void proses(double total) {
            System.out.println("\n--- [Metode: Pembayaran Dompet Digital] ---");
            System.out.printf("Total Pembelian: Rp %.2f\n", total);
            
            double potongan = total * POTONGAN_LAYANAN_PERCENT;
            double totalSetelahPotongan = total - potongan;
            
            // Menampilkan potongan biaya layanan
            System.out.printf("Potongan Biaya Layanan (%.0f%%): Rp **%.2f**\n", 
                              POTONGAN_LAYANAN_PERCENT * 100, potongan);
            System.out.printf("Nominal yang Masuk ke Merchant: Rp %.2f\n", totalSetelahPotongan);
        }
    }

    // --- TESTER/MAIN METHOD ---
    public static void main(String[] args) {
        
        // Inisialisasi objek dari masing-masing subclass
        Pembayaran tunai = new Tunai(100000.00); // Uang yang dibayarkan
        Pembayaran kartu = new Kartu();
        Pembayaran dompetDigital = new DompetDigital();
        
        // Membuat array Pembayaran[] (Polymorphism Array)
        Pembayaran[] daftarPembayaran = {
            tunai,
            kartu,
            dompetDigital
        };
        
        double[] totalTransaksi = {
            78500.00, // Transaksi Tunai
            250000.00, // Transaksi Kartu
            50000.00   // Transaksi Dompet Digital
        };
        
        System.out.println("==========================================");
        System.out.println("      DEMO POLYMORPHISM PEMBAYARAN");
        System.out.println("==========================================");
        
        // Iterasi dan panggil proses() untuk menunjukkan efek polymorphism
        for (int i = 0; i < daftarPembayaran.length; i++) {
            // Polymorphism terjadi di sini: JVM secara otomatis memanggil 
            // method proses() yang tepat dari objek subclass (Tunai, Kartu, DompetDigital)
            // meskipun variabelnya bertipe Pembayaran (superclass).
            daftarPembayaran[i].proses(totalTransaksi[i]);
            System.out.println("------------------------------------------");
        }
    }
}
